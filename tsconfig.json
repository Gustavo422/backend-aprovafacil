{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "core",
    "config",
    "types",
    "repositories",
    "admin",
    "api"
  ],
  "exclude": ["node_modules", "dist"]
} 